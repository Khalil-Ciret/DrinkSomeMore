<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff" tools:context=".HomeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/littleGlass"
                android:id="@+id/button26"
                android:layout_marginBottom="163dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regularGlass"
                android:id="@+id/button33"
                android:layout_alignTop="@+id/button26"
                android:layout_toEndOf="@+id/button26"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/littleBottle"
                android:id="@+id/button50"
                android:layout_alignTop="@+id/button33"
                android:layout_toStartOf="@+id/button100"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normalBottle"
                android:id="@+id/button100"
                android:layout_alignTop="@+id/button50"
                android:layout_alignParentEnd="true"
                android:onClick="onClick" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextCustomValue"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/button33"
                android:layout_toStartOf="@+id/buttonValidateTextField"
                android:onClick="onClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:id="@+id/buttonValidateTextField"
                android:layout_alignBottom="@+id/editTextCustomValue"
                android:layout_toEndOf="@+id/button50"
                android:onClick="onClick" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:id="@+id/buttonDebug"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelDrank"
                android:id="@+id/textViewWaterDrank"
                android:layout_above="@+id/buttonDebug"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="34dp" />

        </RelativeLayout>

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
